<form action="/reviews/<%= @post %>" method="POST" >
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group text-center">
      <label for="ReviewScore">만족도 점수(5점만점)</label>
      <select class="form-control" id="ReviewScore" name="ReviewScore">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
    </div>
  <div class="form-group text-center">
    <label for ="ReviewContents">리뷰를 작성해주세요</label>
    <textarea class="form-control" id="ReviewContents" name="ReviewContents" rows="3"></textarea>
  </div>
  <input class="btn btn-primary text-center" type="submit" value="제출하기">
</form>